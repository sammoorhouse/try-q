doctype html
html(ng-app="tryQ")
  head
    meta(charset='utf8')
    meta(http-equiv="Content-Type", content="text/html")
    meta(http-equiv="X-UA-Compatible"  content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    base(href='/')
    title Learn Q!
    link(href="css/bootstrap.min.css", rel="stylesheet")
    link(href="fonts/css/font-awesome.min.css", rel="stylesheet")
    link(href="css/animate.min.css", rel="stylesheet")
    link(href="css/custom.css", rel="stylesheet")
    link(href="css/icheck/flat/green.css")
    script(src="js/jquery.min.js")


    <!--[if lt IE 9]>
    <script src="../assets/js/ie8-responsive-file-warning.js"></script>
    <![endif]-->

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

  body.nav-md
    div.container.body
      div.main_container
        div(class="col-md-3 left_col" ng-controller="LeftNavCtrl")
          div(class="left_col scroll-view")
             div(class="navbar nav_title", style="border: 0;")
               a(href="index.html", class="site_title") Try Q!
             div(class="profile")
               div(class="profile_pic")
                 img(src="images/my-head.png", alt="...", class="img-circle profile_img")
               div(class="profile_info")
                 span Welcome,
                 h2 Sam Moorhouse

             br
             div(id="sidebar-menu", class="main_menu_side hidden-print main_menu")
               div(class="menu_section")
                  h3 General

                  ul(class="nav side-menu")
                    li(data-ng-repeat="chapter in toc")
                      a
                        i(class="fa fa-home")
                        | Chapter
                        span(class="fa fa-chevron-down")
                      ul(class="nav child_menu")
                        li(data-ng-repeat="question in chapter.questions")
                          a(href="index.html") Question
                  ul(class="nav side-menu")
                     lihe
                       a
                         i(class="fa fa-home")
                         | Home
                         span(class="fa fa-chevron-down")
                       ul(class="nav child_menu")
                         li
                           a(href="index.html") Dashboard
                         li
                           a(href="index2.html") Dashboard2

             div(class="sidebar-footer hidden-small")
               a(data-toggle="tooltip", data-placement="top", title="Settings")
                 span(class="glyphicon glyphicon-cog", aria-hidden="true")
               a(data-toggle="tooltip", data-placement="top" title="FullScreen")
                 span(class="glyphicon glyphicon-fullscreen", aria-hidden="true")
               a(data-toggle="tooltip", data-placement="top", title="Lock")
                 span(class="glyphicon glyphicon-eye-close", aria-hidden="true")
               a(data-toggle="tooltip", data-placement="top", title="Logout")
                 span(class="glyphicon glyphicon-off", aria-hidden="true")
        block body

    script(src="js/bootstrap.min.js")
    script(src="js/progressbar/bootstrap-progressbar.min.js")
    script(src="js/nicescroll/jquery.nicescroll.min.js")
    script(src="js/icheck/icheck.min.js")
    script(src="js/custom.js")
